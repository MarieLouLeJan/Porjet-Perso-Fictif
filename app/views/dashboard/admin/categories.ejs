<%- include ('../partials/head') %>
<%- include ('../partials/header') %>
<%- include ('../partials/sidebar') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="row">
        <h1>
            Bienvenu administrateur <%= user.name %>
        </h1> 
        
        <hr>

        <h3  class="info-perso">Catégories</h3>

        <hr>    

        <div class="info-div">
        <% for(const cat of categories) { %>
            <div class="info-key">
                <%= cat.name %> 
                <form action="/dashboard/admin/category/deleteCategory/<%= cat.id %>" method="POST">
                    <input class="button-cart" value="Supprimer la catégorie et ses produits" type="submit">
                </form> 
            </div>
            <div class="info">                       
                <%= cat.products.length%> produits 
            </div>
        <% } %>
        </div>

        <form class="form" method="POST" action="/dashboard/admin/category/addCategory">
            <div class="form-group">
                <input type="text" placeholder="Ajouter une catégorie" name="name" />
            </div>
            <input type="submit" class="btn btn-primary" value="Ajouter" />
        </form>

        <div class="complete"><a  class="complete" href="/dashboard/admin/category/updateCategory">Modifiez les catégories</a></div>

    </div>
</main>

