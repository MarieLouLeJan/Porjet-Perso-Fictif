<%- include ('../partials/head') %>
<%- include ('../partials/header') %>
<%- include ('../partials/sidebar') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div class="row">
        <h1>
            Bienvenu administrateur <% user.name %>
        </h1> 
        
        <hr>

        <h3  class="info-perso">Modifiez vos catégories</h3>

        <hr>    

        <% for(cat of categories) { %>
            <form class="form" method="POST" action="/dashboard/admin/categories/update">
                <input type="text" placeholder="<%= cat.title %>" name="title"/>
                <input type="hidden" name="id" value=" <%= cat.id %> "/>
                <input type="submit" class="btn btn-primary" value="Modifier" />
            </form>
            <hr>
        <% } %>
        <% if(locals.message){ %>
        <%= message %>
        <% } %>
    </div>

        <div class="complete"><a  class="complete" href="/dashboard/admin/category">Retour aux catégories</a></div>




    </div>
</main>