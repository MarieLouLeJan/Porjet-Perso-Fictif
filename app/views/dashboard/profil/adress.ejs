<%- include ('../partials/head') %>
<%- include ('../partials/header') %>
<%- include ('../partials/sidebar') %>

<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <%- include ('../partials/quickActions') %>
    <div class="row">
        <h1>
            Mon profil
        </h1> 
        
        <hr>

        <h3  class="info-perso">Mes adresses</h3>

        <hr>    
        
        <div class="info-div">
            <% for(const adress of user.adresses) { %>
            <div class="info-key"> 
                <%= adress.entitled %>
            </div>
            <div class="info">
                <%= adress.number %> <%= adress.number_complement %> <%= adress.street %>, 
                <%= adress.postal_code %> <%= adress.city %>, <%= adress.country %>
                <form action="/dashboard/profil/unactiveAdress/<%=adress.id%>" method="POST">
                    <input class="button-cart" value="Supprimer cette adresse" type="submit"/> 
                </form> 
            </div>

            <% } %>
            <hr>    
        </div>

        <div class="complete"><a href="/dashboard/profil/addAdress">Ajouter une adresse</a></div>

    </div>
</main>

